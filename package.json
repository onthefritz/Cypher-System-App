{
  "name": "electron-tree-cypher",
  "version": "0.8.0",
  "main": "main.js",
  "description": "App to easily create and use characters for the Tree Cypher System",
  "license": "UNLICENSED",
  "author": {
    "name": "Fritz"
  },
  "build": {
    "appId": "com.electron.cypher.character.builder",
    "files": [
      "*",
      "src/**/*",
      "node_modules/**/*",
      "backend/**/*",
      "dist/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "asar": true,
    "extends": null,
    "linux": {
      "target": "AppImage",
      "maintainer": "Fritz"
    },
    "squirrelWindows": {

    }
  },
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/cdk": "^16.2.5",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/material": "^16.2.5",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "body-parser": "^1.20.2",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "material-design-icons": "^3.0.1",
    "npm": "^10.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.3",
    "@angular/cli": "~16.2.3",
    "@angular/compiler-cli": "^16.2.0",
    "@types/jasmine": "~4.3.0",
    "electron": "^26.2.1",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.1.3"
  }
}
